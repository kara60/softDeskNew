@inherits LayoutComponentBase

<div class="min-h-screen bg-slate-50">
    <!-- Compact Sidebar -->
    <div class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-lg border-r border-slate-200">
        <!-- Logo Area - Compact -->
        <div class="flex items-center h-16 px-6 border-b border-slate-100">
            <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h1 class="text-base font-bold text-slate-900">SoftDesk</h1>
                    <p class="text-xs text-slate-500">Ticket System</p>
                </div>
            </div>
        </div>

        <!-- Navigation - Compact -->
        <nav class="mt-4 px-3">
            <div class="space-y-1">
                <!-- Dashboard -->
                <a href="/" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg text-blue-700 bg-blue-50 border-l-4 border-blue-500">
                    <svg class="mr-3 h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                    </svg>
                    Dashboard
                </a>

                <!-- Taleplerim -->
                <a href="/tickets" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg text-slate-700 hover:text-slate-900 hover:bg-slate-50 transition-all duration-150">
                    <svg class="mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-1l-4 4z" />
                    </svg>
                    Taleplerim
                    <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">42</span>
                </a>
            </div>

            <!-- Admin Section - Compact -->
            <div class="mt-6 pt-4 border-t border-slate-200">
                <div class="px-3 mb-2">
                    <h3 class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Admin Panel</h3>
                </div>
                <div class="space-y-1">
                    <a href="/admin/dashboard" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg text-slate-700 hover:text-slate-900 hover:bg-slate-50 transition-all duration-150">
                        <svg class="mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2V7a2 2 0 012-2h2a2 2 0 002 2v2a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 00-2 2h-2a2 2 0 00-2 2v6a2 2 0 01-2 2H9z" />
                        </svg>
                        Dashboard
                    </a>

                    <a href="/admin/tickets" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg text-slate-700 hover:text-slate-900 hover:bg-slate-50 transition-all duration-150">
                        <svg class="mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                        Ticket Yönetimi
                        <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-800">8</span>
                    </a>

                    <a href="/admin/settings" class="group flex items-center px-3 py-2 text-sm font-medium rounded-lg text-slate-700 hover:text-slate-900 hover:bg-slate-50 transition-all duration-150">
                        <svg class="mr-3 h-4 w-4 text-slate-400 group-hover:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        </svg>
                        Tanımlar
                    </a>
                </div>
            </div>
        </nav>

        <!-- User Profile - Compact -->
        <div class="absolute bottom-0 left-0 right-0 p-3">
            <div class="bg-slate-50 rounded-lg p-3 border border-slate-200">
                <div class="flex items-center">
                    <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                        <span class="text-xs font-bold text-white">BF</span>
                    </div>
                    <div class="ml-3 flex-1 min-w-0">
                        <p class="text-sm font-medium text-slate-900 truncate">BANAT FIRÇA</p>
                        <p class="text-xs text-slate-500">Müşteri</p>
                    </div>
                    <button class="text-slate-400 hover:text-slate-600 p-1">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="pl-64">
        <!-- Compact Top Bar -->
        <header class="bg-white border-b border-slate-200 sticky top-0 z-30">
            <div class="px-6 py-3">
                <div class="flex items-center justify-between">
                    <!-- Breadcrumb - Compact -->
                    <div class="flex items-center space-x-2 text-sm">
                        <span class="text-slate-500">Ana Sayfa</span>
                        <svg class="w-3 h-3 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        <span class="text-slate-900 font-medium">Dashboard</span>
                    </div>

                    <!-- Top Actions - Compact -->
                    <div class="flex items-center space-x-3">
                        <!-- Compact Search -->
                        <div class="relative">
                            <input type="text" placeholder="Ticket ara..." class="w-48 pl-8 pr-3 py-1.5 border border-slate-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm bg-slate-50">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-3 w-3 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </div>
                        </div>

                        <!-- Notifications - Compact -->
                        <button class="relative p-2 text-slate-400 hover:text-slate-600 rounded-lg hover:bg-slate-50">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5-5 5-5m-6 10h5" />
                            </svg>
                            <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
                        </button>

                        <!-- Compact New Ticket Button -->
                        <a href="/tickets/create" class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 shadow-sm transition-all duration-150">
                            <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Yeni Talep
                        </a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content - Compact Padding -->
        <main class="p-6">
            @Body
        </main>
    </div>
</div>

<!-- Compact Error UI -->
<div id="blazor-error-ui" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg shadow-lg fixed bottom-4 right-4 max-w-sm">
    <div class="flex items-center">
        <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <div class="flex-1">
            <p class="font-medium text-sm">Bir hata oluştu</p>
            <div class="mt-1 flex space-x-2">
                <a href="" class="text-xs underline hover:no-underline">Yenile</a>
                <button onclick="document.getElementById('blazor-error-ui').style.display='none'" class="text-xs underline hover:no-underline">Kapat</button>
            </div>
        </div>
    </div>
</div>