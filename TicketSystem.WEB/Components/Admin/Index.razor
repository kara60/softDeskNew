    private int CategoriesCount = 12;
    private int UsersCount = 47;
    private int CompaniesCount = 8;
    private int SystemSettingsCount = 24;
    private int ActiveTicketsCount = 18;

    private List<ActivityData> RecentActivities = new();

    protected override void OnInitialized()
    {
        LoadRecentActivities();
    }

