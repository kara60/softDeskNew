@page "/admin/settings"
@rendermode InteractiveServer

<PageTitle>Tanım Merkezi - SoftDesk Admin</PageTitle>

<!-- Page Header -->
<div class="mb-8">
    <div>
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Tanım Merkezi</h1>
        <p class="text-gray-600">Sistem tanımlarını ve ayarlarını bu merkezden yönetebilirsiniz</p>
    </div>
</div>

<!-- Settings Categories Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- Ticket Türleri -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/ticket-types"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">@TicketTypesCount öğe</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">Ticket Türleri</h3>
        <p class="text-sm text-gray-600 mb-4">Ticket türlerini ve dinamik form yapılarını tanımlayın</p>
        <div class="flex items-center text-xs text-blue-600 group-hover:text-blue-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    <!-- Kategoriler & Modüller -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/categories"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">@CategoriesCount kategori</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">Kategoriler & Modüller</h3>
        <p class="text-sm text-gray-600 mb-4">Sistem kategorilerini ve alt modüllerini tanımlayın</p>
        <div class="flex items-center text-xs text-green-600 group-hover:text-green-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    <!-- Kullanıcı Yönetimi -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/users"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">@UsersCount kullanıcı</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors">Kullanıcı Yönetimi</h3>
        <p class="text-sm text-gray-600 mb-4">Admin ve müşteri kullanıcılarını yönetin</p>
        <div class="flex items-center text-xs text-purple-600 group-hover:text-purple-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    <!-- Firma Yönetimi -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/companies"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">@CompaniesCount firma</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-orange-600 transition-colors">Firma Yönetimi</h3>
        <p class="text-sm text-gray-600 mb-4">Müşteri firmalarını ve bilgilerini yönetin</p>
        <div class="flex items-center text-xs text-orange-600 group-hover:text-orange-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    <!-- Sistem Ayarları -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/system-settings"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">@SystemSettingsCount ayar</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-gray-600 transition-colors">Sistem Ayarları</h3>
        <p class="text-sm text-gray-600 mb-4">PMO entegrasyonu ve genel sistem ayarları</p>
        <div class="flex items-center text-xs text-gray-600 group-hover:text-gray-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

    <!-- Raporlama -->
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-200 cursor-pointer group"
         @onclick="@(() => NavigateToPage("/admin/reports"))">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2V7a2 2 0 012-2h2a2 2 0 002 2v2a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 00-2 2h-2a2 2 0 00-2 2v6a2 2 0 01-2 2H9z" />
                </svg>
            </div>
            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">Raporlar</span>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">Raporlama</h3>
        <p class="text-sm text-gray-600 mb-4">Detaylı sistem raporları ve analizleri</p>
        <div class="flex items-center text-xs text-indigo-600 group-hover:text-indigo-700">
            <span>Yönetmeye Git</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </div>
    </div>

</div>

<!-- Quick Stats -->
<div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Sistem Özeti</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center">
            <div class="text-2xl font-bold text-blue-600">@TotalTickets</div>
            <div class="text-sm text-gray-600">Toplam Ticket</div>
        </div>
        <div class="text-center">
            <div class="text-2xl font-bold text-green-600">@ActiveUsers</div>
            <div class="text-sm text-gray-600">Aktif Kullanıcı</div>
        </div>
        <div class="text-center">
            <div class="text-2xl font-bold text-orange-600">@ActiveCompanies</div>
            <div class="text-sm text-gray-600">Aktif Firma</div>
        </div>
        <div class="text-center">
            <div class="text-2xl font-bold text-purple-600">@PendingTickets</div>
            <div class="text-sm text-gray-600">Bekleyen Onay</div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="mt-8 bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Son Aktiviteler</h3>
    <div class="space-y-3">
        @foreach (var activity in RecentActivities)
        {
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
                <div class="w-8 h-8 @activity.IconColor rounded-full flex items-center justify-center mr-3">
                    @((MarkupString)activity.Icon)
                </div>
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">@activity.Description</p>
                    <p class="text-xs text-gray-500">@activity.Time</p>
                </div>
            </div>
        }
    </div>
</div>

